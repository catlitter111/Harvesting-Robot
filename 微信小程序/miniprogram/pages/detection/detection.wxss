/* pages/detection/detection.wxss */
/* 智能水果识别页面样式 - 现代化设计 */

/* === 页面基础布局 === */
.detection-container {
    min-height: 100vh;
    background: linear-gradient(180deg, #F6F6F6 0%, #FAFAFA 100%);
    padding: 0 10rpx 20rpx 20rpx;
    box-sizing: border-box;
    width: 100%;
    overflow-x: hidden;
  }
  
  /* === 顶部状态栏 === */
  .header-status {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15rpx 20rpx;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10rpx);
    border-bottom: 1rpx solid #E8F5E8;
    position: sticky;
    top: 0;
    z-index: 100;
  }
  
  .status-item {
    display: flex;
    align-items: center;
  }
  
  .status-dot {
    width: 12rpx;
    height: 12rpx;
    border-radius: 50%;
    margin-right: 12rpx;
    transition: all 0.3s ease;
  }
  
  .status-dot.online {
    background-color: #4CAF50;
    box-shadow: 0 0 0 4rpx rgba(76, 175, 80, 0.2);
    animation: pulse-online 2s infinite;
  }
  
  .status-dot.offline {
    background-color: #F44336;
  }
  
  @keyframes pulse-online {
    0% { box-shadow: 0 0 0 0 rgba(76, 175, 80, 0.4); }
    70% { box-shadow: 0 0 0 6rpx rgba(76, 175, 80, 0); }
    100% { box-shadow: 0 0 0 0 rgba(76, 175, 80, 0); }
  }
  
  .status-text {
    font-size: 24rpx;
    color: #666;
    font-weight: 500;
  }
  
  .today-count {
    font-size: 24rpx;
    color: #4CAF50;
    font-weight: 600;
  }
  
  /* === 主要内容滚动区域 === */
  .main-content {
    padding: 15rpx 0 0;
    height: calc(100vh - 120rpx);
  }
  
  /* === 卡片通用样式 === */
  .detection-card,
  .result-card,
  .history-card {
    background: white;
    border-radius: 20rpx;
    margin-bottom: 18rpx;
    overflow: hidden;
    box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.06);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .detection-card:hover,
  .result-card:hover,
  .history-card:hover {
    box-shadow: 0 12rpx 48rpx rgba(0, 0, 0, 0.12);
    transform: translateY(-4rpx);
  }
  
  /* === 检测卡片样式 === */
  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 18rpx 20rpx;
    background: linear-gradient(135deg, #E8F5E8 0%, #F1F8E9 100%);
    border-bottom: 1rpx solid #E0E0E0;
  }
  
  .header-left {
    display: flex;
    align-items: center;
  }
  
  .card-icon {
    font-size: 32rpx;
    margin-right: 16rpx;
  }
  
  .card-title {
    font-size: 32rpx;
    font-weight: 700;
    color: #2E7D32;
  }
  
  .detection-mode {
    padding: 8rpx 20rpx;
    border-radius: 20rpx;
    font-size: 22rpx;
    font-weight: 600;
    text-align: center;
  }
  
  .detection-mode.comprehensive {
    background: linear-gradient(135deg, #4CAF50, #66BB6A);
    color: white;
  }
  
  .detection-mode.maturity {
    background: linear-gradient(135deg, #FF9800, #FFB74D);
    color: white;
  }
  
  .detection-mode.health {
    background: linear-gradient(135deg, #2196F3, #64B5F6);
    color: white;
  }
  
  .detection-mode.quality {
    background: linear-gradient(135deg, #9C27B0, #BA68C8);
    color: white;
  }
  
  /* === 图片选择区域样式 === */
  .image-selection-area {
    position: relative;
    margin: 20rpx;
  }
  
  .image-placeholder {
    border: 3rpx dashed #C8E6C9;
    border-radius: 20rpx;
    padding: 40rpx 20rpx;
    text-align: center;
    background: linear-gradient(135deg, #F9FBE7 0%, #F1F8E9 100%);
    transition: all 0.3s ease;
  }
  
  .image-placeholder:active {
    background: linear-gradient(135deg, #E8F5E8 0%, #E0F2F1 100%);
    transform: scale(0.98);
  }
  
  .placeholder-content {
    margin-bottom: 30rpx;
  }
  
  .placeholder-icon {
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 15rpx;
    opacity: 0.6;
    font-size: 60rpx;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .placeholder-title {
    display: block;
    font-size: 28rpx;
    font-weight: 600;
    color: #2E7D32;
    margin-bottom: 8rpx;
  }
  
  .placeholder-subtitle {
    display: block;
    font-size: 24rpx;
    color: #4CAF50;
  }
  
  .selection-buttons {
    display: flex;
    justify-content: center;
    gap: 30rpx;
  }
  
  .selection-btn {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 18rpx;
    border-radius: 16rpx;
    transition: all 0.3s ease;
    min-width: 120rpx;
  }
  
  .camera-btn {
    background: linear-gradient(135deg, #4CAF50, #66BB6A);
    color: white;
  }
  
  .album-btn {
    background: linear-gradient(135deg, #2196F3, #64B5F6);
    color: white;
  }
  
  .selection-btn:active {
    transform: scale(0.95);
  }
  
  .btn-icon {
    font-size: 32rpx;
    margin-bottom: 8rpx;
  }
  
  .btn-text {
    font-size: 22rpx;
    font-weight: 600;
  }
  
  /* === 已选择图片区域 === */
  .selected-image-area {
    position: relative;
    border-radius: 20rpx;
    overflow: hidden;
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  }
  
  .selected-image {
    width: 100%;
    height: 300rpx;
    border-radius: 20rpx;
  }
  
  .image-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
    padding: 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
  }
  
  .image-info {
    flex: 1;
  }
  
  .image-name {
    display: block;
    color: white;
    font-size: 28rpx;
    font-weight: 600;
    margin-bottom: 8rpx;
  }
  
  .image-time {
    display: block;
    color: rgba(255, 255, 255, 0.8);
    font-size: 22rpx;
  }
  
  .image-actions {
    display: flex;
    gap: 16rpx;
  }
  
  .action-btn {
    width: 56rpx;
    height: 56rpx;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10rpx);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }
  
  .action-btn:active {
    background: rgba(255, 255, 255, 0.3);
    transform: scale(0.9);
  }
  
  .action-icon {
    font-size: 24rpx;
  }
  
  /* === AI检测区域标记 === */
  .detection-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }
  
  .detection-box {
    position: absolute;
    border: 3rpx solid #4CAF50;
    border-radius: 8rpx;
    background: rgba(76, 175, 80, 0.1);
    animation: detection-highlight 2s infinite;
  }
  
  @keyframes detection-highlight {
    0%, 100% { border-color: #4CAF50; }
    50% { border-color: #66BB6A; }
  }
  
  .detection-label {
    position: absolute;
    top: -40rpx;
    left: 0;
    background: #4CAF50;
    color: white;
    padding: 6rpx 12rpx;
    border-radius: 8rpx;
    font-size: 20rpx;
    font-weight: 600;
    white-space: nowrap;
  }
  
  /* === 检测控制按钮 - 关键修复区域 === */
  .detection-controls {
    padding: 20rpx;
  }
  
  .detect-btn {
    width: 100%;
    height: 70rpx;
    border-radius: 35rpx;
    border: none;
    margin-bottom: 20rpx;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0;
    margin: 0 0 20rpx 0;
  }
  
  .detect-btn::after {
    border: none;
  }
  
  .detect-btn.active {
    background: linear-gradient(135deg, #4CAF50, #66BB6A);
    color: white;
    box-shadow: 0 8rpx 32rpx rgba(76, 175, 80, 0.3);
  }
  
  .detect-btn.active:active {
    transform: translateY(2rpx);
    box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.3);
  }
  
  .detect-btn.disabled {
    background: #E0E0E0;
    color: #999;
  }
  
  /* 按钮文字居中 - 核心修复 */
  .detect-text {
    font-size: 30rpx;
    font-weight: 700;
    color: inherit;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
    line-height: 1;
    text-align: center;
  }
  
  .detecting-animation {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12rpx;
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
  }
  
  .loading-dot {
    width: 8rpx;
    height: 8rpx;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.8);
    animation: loading-pulse 1.4s ease-in-out infinite both;
  }
  
  .loading-dot:nth-child(1) { animation-delay: -0.32s; }
  .loading-dot:nth-child(2) { animation-delay: -0.16s; }
  .loading-dot:nth-child(3) { animation-delay: 0; }
  
  @keyframes loading-pulse {
    0%, 80%, 100% { transform: scale(0); opacity: 0.5; }
    40% { transform: scale(1); opacity: 1; }
  }
  
  .detecting-text {
    margin-left: 16rpx;
    font-size: 28rpx;
    line-height: 1;
    color: inherit;
  }
  
  /* === 快速设置 === */
  .quick-settings {
    border-top: 1rpx solid #F0F0F0;
    padding-top: 15rpx;
  }
  
  .setting-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15rpx 0;
    transition: all 0.3s ease;
  }
  
  .setting-item:active {
    background: rgba(76, 175, 80, 0.05);
    margin: 0 -15rpx;
    padding: 15rpx;
    border-radius: 12rpx;
  }
  
  .setting-label {
    font-size: 26rpx;
    color: #333;
    font-weight: 500;
  }
  
  .setting-value {
    font-size: 24rpx;
    color: #4CAF50;
    font-weight: 600;
  }
  
  .setting-arrow {
    font-size: 28rpx;
    color: #C0C0C0;
    margin-left: 8rpx;
  }
  
  /* === 分析结果卡片 === */
  .result-header {
    display: flex;
    align-items: center;
    padding: 30rpx;
    background: linear-gradient(135deg, #E3F2FD 0%, #E8F5E8 100%);
    border-bottom: 1rpx solid #E0E0E0;
  }
  
  .result-icon {
    font-size: 32rpx;
    margin-right: 16rpx;
  }
  
  .result-title {
    flex: 1;
    font-size: 32rpx;
    font-weight: 700;
    color: #1976D2;
  }
  
  .confidence-badge {
    background: linear-gradient(135deg, #4CAF50, #66BB6A);
    color: white;
    padding: 8rpx 16rpx;
    border-radius: 20rpx;
  }
  
  .confidence-text {
    font-size: 22rpx;
    font-weight: 600;
  }
  
  .result-content {
    padding: 30rpx;
  }
  
  /* === 水果基本信息 === */
  .fruit-basic-info {
    display: flex;
    align-items: center;
    padding: 24rpx;
    background: linear-gradient(135deg, #F9FBE7 0%, #F1F8E9 100%);
    border-radius: 16rpx;
    margin-bottom: 30rpx;
  }
  
  .fruit-avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    background: white;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 24rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  }
  
  .fruit-emoji {
    font-size: 40rpx;
  }
  
  .fruit-details {
    flex: 1;
  }
  
  .fruit-name {
    display: block;
    font-size: 32rpx;
    font-weight: 700;
    color: #2E7D32;
    margin-bottom: 8rpx;
  }
  
  .fruit-variety {
    display: block;
    font-size: 24rpx;
    color: #4CAF50;
  }
  
  .overall-grade {
    padding: 12rpx 24rpx;
    border-radius: 20rpx;
    font-weight: 700;
    font-size: 24rpx;
  }
  
  .overall-grade.excellent {
    background: linear-gradient(135deg, #4CAF50, #66BB6A);
    color: white;
  }
  
  .overall-grade.good {
    background: linear-gradient(135deg, #8BC34A, #AED581);
    color: white;
  }
  
  .overall-grade.average {
    background: linear-gradient(135deg, #FF9800, #FFB74D);
    color: white;
  }
  
  .overall-grade.poor {
    background: linear-gradient(135deg, #F44336, #EF5350);
    color: white;
  }
  
  /* === 分析指标 === */
  .analysis-metrics {
    margin-bottom: 30rpx;
  }
  
  .metric-item {
    background: white;
    border-radius: 16rpx;
    padding: 24rpx;
    margin-bottom: 20rpx;
    border: 1rpx solid #F0F0F0;
    transition: all 0.3s ease;
  }
  
  .metric-item:hover {
    border-color: #E8F5E8;
    box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.1);
  }
  
  .metric-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16rpx;
  }
  
  .metric-label {
    font-size: 28rpx;
    font-weight: 600;
    color: #333;
  }
  
  .metric-value {
    font-size: 28rpx;
    font-weight: 700;
  }
  
  .metric-value.good {
    color: #4CAF50;
  }
  
  .metric-value.warning {
    color: #FF9800;
  }
  
  .metric-value.error {
    color: #F44336;
  }
  
  .metric-progress {
    border-radius: 6rpx;
    margin-bottom: 16rpx;
  }
  
  /* === 健康指标 === */
  .health-indicators {
    display: flex;
    gap: 16rpx;
    flex-wrap: wrap;
  }
  
  .health-tag {
    padding: 8rpx 16rpx;
    border-radius: 20rpx;
    font-size: 22rpx;
    font-weight: 600;
  }
  
  .health-tag.good {
    background: rgba(76, 175, 80, 0.1);
    color: #2E7D32;
    border: 1rpx solid rgba(76, 175, 80, 0.3);
  }
  
  .health-tag.warning {
    background: rgba(255, 152, 0, 0.1);
    color: #E65100;
    border: 1rpx solid rgba(255, 152, 0, 0.3);
  }
  
  /* === 品质分析 === */
  .quality-breakdown {
    margin-top: 16rpx;
  }
  
  .quality-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12rpx;
  }
  
  .quality-aspect {
    font-size: 24rpx;
    color: #666;
    font-weight: 500;
  }
  
  .quality-stars {
    display: flex;
    gap: 4rpx;
  }
  
  .star {
    font-size: 20rpx;
  }
  
  .star.filled {
    color: #FFD700;
  }
  
  .star.empty {
    color: #E0E0E0;
  }
  
  .quality-text {
    font-size: 24rpx;
    color: #4CAF50;
    font-weight: 600;
  }
  
  /* === AI建议 === */
  .ai-recommendation {
    background: linear-gradient(135deg, #E3F2FD 0%, #E1F5FE 100%);
    border-radius: 16rpx;
    padding: 24rpx;
    border: 1rpx solid #BBDEFB;
  }
  
  .recommendation-header {
    display: flex;
    align-items: center;
    margin-bottom: 16rpx;
  }
  
  .recommendation-icon {
    font-size: 24rpx;
    margin-right: 12rpx;
  }
  
  .recommendation-title {
    font-size: 28rpx;
    font-weight: 700;
    color: #1976D2;
  }
  
  .recommendation-text {
    font-size: 26rpx;
    line-height: 1.6;
    color: #424242;
    margin-bottom: 20rpx;
  }
  
  .action-suggestions {
    display: flex;
    gap: 16rpx;
    flex-wrap: wrap;
  }
  
  .suggestion-btn {
    padding: 12rpx 24rpx;
    border-radius: 20rpx;
    font-size: 24rpx;
    font-weight: 600;
    border: none;
    transition: all 0.3s ease;
  }
  
  .suggestion-btn.harvest {
    background: linear-gradient(135deg, #4CAF50, #66BB6A);
    color: white;
  }
  
  .suggestion-btn.wait {
    background: linear-gradient(135deg, #FF9800, #FFB74D);
    color: white;
  }
  
  .suggestion-btn.inspect {
    background: linear-gradient(135deg, #2196F3, #64B5F6);
    color: white;
  }
  
  .suggestion-btn:active {
    transform: scale(0.95);
  }
  
  /* === 结果操作按钮 === */
  .result-actions {
    display: flex;
    justify-content: space-around;
    padding: 20rpx 30rpx;
    border-top: 1rpx solid #F0F0F0;
    background: #FAFAFA;
  }
  
  .result-action-btn {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 16rpx;
    background: transparent;
    border: none;
    border-radius: 12rpx;
    transition: all 0.3s ease;
    min-width: 80rpx;
  }
  
  .result-action-btn:active {
    background: rgba(76, 175, 80, 0.1);
    transform: scale(0.95);
  }
  
  .action-btn-icon {
    font-size: 32rpx;
    margin-bottom: 8rpx;
  }
  
  .action-btn-text {
    font-size: 22rpx;
    color: #666;
    font-weight: 500;
  }
  
  /* === 历史记录卡片 === */
  .history-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 25rpx;
    background: linear-gradient(135deg, #FFF3E0 0%, #FFF8E1 100%);
    border-bottom: 1rpx solid #E0E0E0;
  }
  
  .history-icon {
    font-size: 32rpx;
    margin-right: 16rpx;
  }
  
  .history-title {
    font-size: 32rpx;
    font-weight: 700;
    color: #E65100;
  }
  
  .date-filter {
    display: flex;
    align-items: center;
    padding: 8rpx 16rpx;
    background: rgba(255, 152, 0, 0.1);
    border-radius: 20rpx;
    border: 1rpx solid rgba(255, 152, 0, 0.3);
  }
  
  .filter-text {
    font-size: 24rpx;
    color: #E65100;
    font-weight: 600;
    margin-right: 8rpx;
  }
  
  .filter-arrow {
    font-size: 20rpx;
    color: #E65100;
  }
  
  /* === 历史统计概览 === */
  .history-stats {
    display: flex;
    align-items: center;
    padding: 18rpx 20rpx;
    background: linear-gradient(135deg, #F9FBE7 0%, #F1F8E9 100%);
  }
  
  .stat-item {
    flex: 1;
    text-align: center;
  }
  
  .stat-number {
    display: block;
    font-size: 32rpx;
    font-weight: 800;
    color: #2E7D32;
    margin-bottom: 6rpx;
  }
  
  .stat-label {
    display: block;
    font-size: 20rpx;
    color: #4CAF50;
    font-weight: 500;
  }
  
  .stat-divider {
    width: 2rpx;
    height: 50rpx;
    background: rgba(76, 175, 80, 0.2);
    margin: 0 15rpx;
  }
  
  /* === 检测记录列表 === */
  .detection-list {
    padding: 0 20rpx 20rpx;
    max-height: 600rpx;
    overflow-y: auto;
  }
  
  .empty-list {
    text-align: center;
    padding: 60rpx 40rpx;
  }
  
  .empty-icon {
    font-size: 80rpx;
    margin-bottom: 20rpx;
    opacity: 0.5;
  }
  
  .empty-title {
    display: block;
    font-size: 28rpx;
    font-weight: 600;
    color: #666;
    margin-bottom: 10rpx;
  }
  
  .empty-subtitle {
    display: block;
    font-size: 24rpx;
    color: #999;
  }
  
  .detection-item {
    display: flex;
    align-items: center;
    padding: 18rpx;
    background: white;
    border-radius: 16rpx;
    margin-bottom: 12rpx;
    border: 1rpx solid #F0F0F0;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }
  
  .detection-item:active {
    background: #FAFAFA;
    transform: scale(0.98);
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  }
  
  .item-image {
    position: relative;
    margin-right: 16rpx;
  }
  
  .thumbnail {
    width: 80rpx;
    height: 80rpx;
