  .load-more-text {
    font-size: 26rpx;
    color: #4CAF50;
    font-weight: 500;
  }
  
  /* === 模态框样式 === */
  .image-options-modal,
  .mode-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1000;
    display: flex;
    align-items: flex-end;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .image-options-modal.hide,
  .mode-modal.hide {
    opacity: 0;
    pointer-events: none;
  }
  
  .image-options-modal.show,
  .mode-modal.show {
    opacity: 1;
    pointer-events: all;
  }
  
  .options-content,
  .mode-content {
    width: 100%;
    background: white;
    border-radius: 24rpx 24rpx 0 0;
    padding-bottom: env(safe-area-inset-bottom);
    transform: translateY(100%);
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .image-options-modal.show .options-content,
  .mode-modal.show .mode-content {
    transform: translateY(0);
  }
  
  .options-header,
  .mode-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 25rpx;
    border-bottom: 1rpx solid #F0F0F0;
  }
  
  .options-title,
  .mode-title {
    font-size: 32rpx;
    font-weight: 700;
    color: #333;
  }
  
  .close-btn {
    width: 48rpx;
    height: 48rpx;
    border-radius: 50%;
    background: #F0F0F0;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }
  
  .close-btn:active {
    background: #E0E0E0;
    transform: scale(0.9);
  }
  
  .close-icon {
    font-size: 32rpx;
    color: #666;
    font-weight: 300;
  }
  
  .options-list,
  .mode-list {
    padding: 15rpx 25rpx 30rpx;
  }
  
  .option-item,
  .mode-item {
    display: flex;
    align-items: center;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #F8F8F8;
    transition: all 0.3s ease;
  }
  
  .option-item:active,
  .mode-item:active {
    background: rgba(76, 175, 80, 0.05);
    margin: 0 -15rpx;
    padding: 20rpx 15rpx;
    border-radius: 12rpx;
  }
  
  .option-item:last-child,
  .mode-item:last-child {
    border-bottom: none;
  }
  
  .option-icon {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 24rpx;
    font-size: 36rpx;
  }
  
  .option-icon.camera {
    background: linear-gradient(135deg, #4CAF50, #66BB6A);
  }
  
  .option-icon.album {
    background: linear-gradient(135deg, #2196F3, #64B5F6);
  }
  
  .option-icon.multiple {
    background: linear-gradient(135deg, #FF9800, #FFB74D);
  }
  
  .option-content {
    flex: 1;
  }
  
  .option-title {
    display: block;
    font-size: 30rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 8rpx;
  }
  
  .option-desc {
    display: block;
    font-size: 24rpx;
    color: #666;
    line-height: 1.4;
  }
  
  /* === 检测模式选择 === */
  .mode-item.selected {
    background: rgba(76, 175, 80, 0.1);
    border-radius: 12rpx;
    margin: 0 -20rpx;
    padding: 24rpx 20rpx;
  }
  
  .mode-info {
    flex: 1;
  }
  
  .mode-name {
    display: block;
    font-size: 30rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 8rpx;
  }
  
  .mode-desc {
    display: block;
    font-size: 24rpx;
    color: #666;
    line-height: 1.4;
  }
  
  .mode-indicator {
    width: 48rpx;
    height: 48rpx;
    border-radius: 50%;
    border: 2rpx solid #E0E0E0;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }
  
  .mode-item.selected .mode-indicator {
    background: #4CAF50;
    border-color: #4CAF50;
  }
  
  .indicator-icon {
    font-size: 24rpx;
    color: white;
    font-weight: 700;
  }
  
  /* === 隐藏元素 === */
  .hidden-canvas {
    position: fixed;
    top: -9999rpx;
    left: -9999rpx;
    width: 1rpx;
    height: 1rpx;
    opacity: 0;
  }
  
  .bottom-spacing {
    height: 20rpx;
  }
  
  /* === 响应式设计 === */
  @media (max-width: 750rpx) {
    .selection-buttons {
      flex-direction: row;
      gap: 20rpx;
      justify-content: center;
    }
    
    .selection-btn {
      min-width: 120rpx;
      flex: 0 0 auto;
    }
    
    .history-stats {
      flex-wrap: wrap;
    }
    
    .stat-item {
      flex: 0 0 50%;
      margin-bottom: 20rpx;
    }
    
    .stat-divider {
      display: none;
    }
  }
  
  /* === 深色模式支持 === */
  @media (prefers-color-scheme: dark) {
    .detection-container {
      background: linear-gradient(180deg, #121212 0%, #1E1E1E 100%);
    }
    
    .detection-card,
    .result-card,
    .history-card {
      background: #1E1E1E;
      border: 1rpx solid #333;
    }
    
    .card-title,
    .result-title,
    .history-title {
      color: #FFFFFF;
    }
    
    .placeholder-title,
    .fruit-name {
      color: #FFFFFF;
    }
    
    .metric-label,
    .option-title,
    .mode-name {
      color: #FFFFFF;
    }
  }