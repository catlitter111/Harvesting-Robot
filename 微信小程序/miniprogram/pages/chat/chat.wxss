/* 聊天页面样式 */
.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f6f6f6;
}

/* 连接状态提示 */
.connection-status {
  background-color: #ff6b6b;
  color: white;
  text-align: center;
  padding: 12rpx 0;
  font-size: 28rpx;
}

/* 功能工具栏 */
.toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx;
  background-color: white;
  border-bottom: 1rpx solid #e8e8e8;
}

.toolbar-left {
  flex: 1;
}

.chat-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.toolbar-right {
  display: flex;
  align-items: center;
}

/* 消息列表区域 */
.message-list {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
}

.message-item {
  margin-bottom: 24rpx;
  display: flex;
}

.message-item.user {
  justify-content: flex-end;
}

.message-item.ai {
  justify-content: flex-start;
}

/* 消息气泡样式 */
.message-bubble {
  max-width: 70%;
  padding: 24rpx 32rpx;
  border-radius: 40rpx;
  position: relative;
}

/* 消息内容区域 */
.message-content {
  margin-bottom: 8rpx;
}

.user .message-bubble {
  background-color: #4CAF50;
  color: white;
}

.ai .message-bubble {
  background-color: white;
  color: #333;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
}

.message-text {
  font-size: 32rpx;
  line-height: 1.4;
  word-wrap: break-word;
}

/* 消息信息 */
.message-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 12rpx;
}

.message-time {
  font-size: 24rpx;
  opacity: 0.7;
}

.message-status {
  margin-left: 16rpx;
}

.status-icon {
  width: 32rpx;
  height: 32rpx;
}

.retry-btn {
  color: #4CAF50;
  font-size: 24rpx;
  margin-left: 12rpx;
  text-decoration: underline;
  cursor: pointer;
}

/* 展开/收起按钮 */
.expand-btn {
  margin-top: 12rpx;
  text-align: right;
}

.expand-text {
  color: #4CAF50;
  font-size: 24rpx;
  text-decoration: underline;
  cursor: pointer;
}

.user .expand-text {
  color: rgba(255, 255, 255, 0.8);
}

/* 消息列表底部占位 */
.message-list-bottom {
  height: 20rpx;
}

/* 输入区域 */
.input-area {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: white;
  border-top: 2rpx solid #e5e5e5;
  box-sizing: border-box;
}

.clear-button {
  padding: 8rpx 16rpx;
  background-color: #f5f5f5;
  border: 1rpx solid #ddd;
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #666;
}

.clear-text {
  color: #666;
  font-size: 24rpx;
}

.message-input {
  flex: 1;
  height: 80rpx;
  padding: 0 32rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 40rpx;
  font-size: 32rpx;
  background-color: #f8f8f8;
}

.send-button {
  width: 120rpx;
  height: 80rpx;
  margin-left: 20rpx;
  background-color: #4CAF50;
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.send-button[disabled] {
  background-color: #ccc;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
} 