/* pages/settings/settings.wxss */
.container {
    min-height: 100vh;
    background-color: #f6f6f6;
    padding-bottom: 40rpx;
  }
  
  /* 头部区域 */
  .header {
    background-color: #4CAF50;
    padding: 40rpx 30rpx;
    display: flex;
    align-items: center;
    color: white;
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  }
  
  .avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 60rpx;
    background-color: white;
    margin-right: 30rpx;
  }
  
  .device-info {
    flex: 1;
  }
  
  .device-name {
    display: block;
    font-size: 34rpx;
    font-weight: bold;
    margin-bottom: 10rpx;
  }
  
  .device-status {
    display: block;
    font-size: 26rpx;
    background-color: rgba(255, 255, 255, 0.3);
    padding: 6rpx 20rpx;
    border-radius: 30rpx;
    display: inline-block;
  }
  
  .device-status.online {
    background-color: rgba(76, 175, 80, 0.3);
  }
  
  /* 设置列表 */
  .settings-list {
    padding: 30rpx;
  }
  
  .settings-group {
    background-color: white;
    border-radius: 12rpx;
    overflow: hidden;
    margin-bottom: 30rpx;
    box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
  }
  
  .group-title {
    font-size: 28rpx;
    color: #999;
    padding: 20rpx 30rpx;
    background-color: #f9f9f9;
    border-bottom: 2rpx solid #eee;
  }
  
  .settings-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 26rpx 30rpx;
    border-bottom: 2rpx solid #f0f0f0;
  }
  
  .settings-item:last-child {
    border-bottom: none;
  }
  
  .item-label {
    font-size: 30rpx;
    color: #333;
  }
  
  .item-content {
    display: flex;
    align-items: center;
    font-size: 28rpx;
    color: #666;
  }
  
  .item-content text {
    margin-right: 10rpx;
  }
  
  .icon-arrow {
    color: #ccc;
    font-size: 32rpx;
  }
  
  .update-tag {
    color: #4CAF50;
    padding: 4rpx 10rpx;
    border-radius: 4rpx;
    font-size: 24rpx;
    background-color: rgba(76, 175, 80, 0.1);
  }
  
  .slider-content {
    width: 400rpx;
  }
  
  /* 操作区域 */
  .actions {
    padding: 0 30rpx;
    margin-top: 50rpx;
    display: flex;
    justify-content: space-between;
  }
  
  .btn-action {
    width: 45%;
    height: 80rpx;
    font-size: 30rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 40rpx;
  }
  
  .btn-reset {
    background-color: #FF9800;
    color: white;
    box-shadow: 0 4rpx 8rpx rgba(255, 152, 0, 0.3);
  }
  
  .btn-logout {
    background-color: #f44336;
    color: white;
    box-shadow: 0 4rpx 8rpx rgba(244, 67, 54, 0.3);
  }
  
  /* 页脚 */
  .footer {
    text-align: center;
    margin-top: 80rpx;
    padding: 0 30rpx;
  }
  
  .version {
    display: block;
    font-size: 24rpx;
    color: #999;
    margin-bottom: 10rpx;
  }
  
  .copyright {
    display: block;
    font-size: 24rpx;
    color: #999;
  }
  
  /* picker样式调整 */
  .picker {
    width: 100%;
    display: flex;
    justify-content: flex-end;
    align-items: center;
  }